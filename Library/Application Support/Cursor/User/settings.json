{
  // editor
  "editor.mouseWheelZoom": true,
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.tslint": true,
    "source.addMissingImports": true
  },
  "editor.formatOnSave": true,
  "editor.accessibilitySupport": "off",
  "editor.fontSize": 12,

  // terminal
  "terminal.external.osxExec": "iTerm.app",
  "terminal.explorerKind": "external",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.gpuAcceleration": "off",

  // window
  "window.autoDetectColorScheme": true,
  "window.commandCenter": false,
  "window.titleBarStyle": "custom",

  // theme
  "workbench.preferredLightColorTheme": "Tokyo Night Storm",
  "workbench.colorTheme": "Tokyo Night Storm",
  "workbench.preferredDarkColorTheme": "Tokyo Night Storm",
  "workbench.layoutControl.enabled": false,
  "workbench.iconTheme": "material-icon-theme",
  "vscode_vibrancy.opacity": 0.0,

  // vim
  "vim.autoSwitchInputMethod.enable": true,
  "vim.autoSwitchInputMethod.obtainIMCmd": "/opt/homebrew/bin/im-select",
  "vim.autoSwitchInputMethod.switchIMCmd": "/opt/homebrew/bin/im-select {im}",
  "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.ABC",
  "vim.normalModeKeyBindings": [
    { "before": ["g", "r"], "commands": ["references-view.findReferences"] },
    { "before": ["r", "n"], "commands": ["editor.action.rename"] }
  ],

  // git
  "git.autofetch": true,

  // format
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
